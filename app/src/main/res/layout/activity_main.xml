<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.alaershov.vroom.meter.MeterView
        android:id="@+id/view_speedometer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        app:meter_dialBackgroundColor="@color/black"
        app:meter_dialColor="@color/white"
        app:meter_handColor="@color/red"
        app:meter_unitText="km/h"
        app:meter_unitTextPadding="60dp"
        app:meter_unitTextSize="30sp"
        app:meter_valueTextPadding="60dp"
        app:meter_valueTextSize="20sp" />

</FrameLayout>
